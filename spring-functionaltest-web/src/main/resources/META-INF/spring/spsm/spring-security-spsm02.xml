<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:sec="http://www.springframework.org/schema/security" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <sec:http pattern="/spsm/0201/001/**" authentication-manager-ref="userLoginManagerForAthn"
    disable-url-rewriting="false">
    <sec:form-login login-page="/spsm/0201/001/login" login-processing-url="/spsm/0201/001/authenticate"
      default-target-url="/spsm/0201/001?loginSuccess" always-use-default-target="true" />
    <sec:logout logout-url="/spsm/0201/001/logout" logout-success-url="/spsm/0201/001" />
    <sec:intercept-url pattern="/spsm/0201/001/login/**" access="permitAll" />
    <sec:intercept-url pattern="/spsm/0201/**" access="isAuthenticated()" />
  </sec:http>

  <sec:http pattern="/spsm/0202/001/**" authentication-manager-ref="userLoginManagerForAthn"
    disable-url-rewriting="false">
    <sec:form-login login-page="/spsm/0202/001/login" login-processing-url="/spsm/0202/001/authenticate"
      default-target-url="/spsm/0202/001?loginSuccess" always-use-default-target="true" />
    <sec:logout logout-url="/spsm/0202/001/logout" logout-success-url="/spsm/0202/001" />
    <sec:intercept-url pattern="/spsm/0202/001/login/**" access="permitAll" />
    <sec:intercept-url pattern="/spsm/0202/**" access="isAuthenticated()" />
    <sec:session-management session-fixation-protection="migrateSession" />

  </sec:http>

  <sec:http pattern="/spsm/0202/002/**" authentication-manager-ref="userLoginManagerForAthn"
    disable-url-rewriting="false">
    <sec:form-login login-page="/spsm/0202/002/login" login-processing-url="/spsm/0202/002/authenticate"
      default-target-url="/spsm/0202/002?loginSuccess" always-use-default-target="true" />
    <sec:logout logout-url="/spsm/0202/002/logout" logout-success-url="/spsm/0202/002" />
    <sec:intercept-url pattern="/spsm/0202/002/login/**" access="permitAll" />
    <sec:intercept-url pattern="/spsm/0202/**" access="isAuthenticated()" />
    <sec:session-management session-fixation-protection="newSession" />

  </sec:http>

</beans>
