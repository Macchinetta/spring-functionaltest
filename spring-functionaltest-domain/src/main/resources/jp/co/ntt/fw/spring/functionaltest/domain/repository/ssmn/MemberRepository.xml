<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.ntt.fw.spring.functionaltest.domain.repository.ssmn.MemberRepository">

  <select id="getMemberSequence" resultType="long">
    SELECT NEXTVAL('s_member')
  </select>

  <select id="getMemberSequence" resultType="long" databaseId="oracle">
    SELECT
    TO_NUMBER(s_member.nextval) FROM DUAL
  </select>

  <select id="getMemberSequence" resultType="long" databaseId="db2">
    values (NEXT VALUE FOR
    s_member)
  </select>

  <insert id="create">
    INSERT INTO t_member
    (
    member_id
    ,first_name
    ,last_name
    ,first_name_kana
    ,last_name_kana
    ,age
    ,gender
    ,zip_code
    ,state
    ,city
    ,address
    ,occupation
    ,mail_address
    )
    VALUES
    (
    #{memberId}
    ,#{firstName}
    ,#{lastName}
    ,#{firstNameKana}
    ,#{lastNameKana}
    ,#{age}
    ,#{gender}
    ,#{zipCode}
    ,#{state}
    ,#{city}
    ,#{address}
    ,#{occupation}
    ,#{mailAddress}
    )
  </insert>

</mapper>
