<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.ntt.fw.spring.functionaltest.domain.repository.athn.AccountRepository">

  <resultMap id="accountResultMap" type="Account">
    <id property="username" column="username" />
    <result property="password" column="password" />
    <result property="userUuid" column="user_uuid" />
    <result property="firstName" column="first_name" />
    <result property="lastName" column="last_name" />
    <result property="enabled" column="enabled" />
    <result property="admin" column="admin" />
  </resultMap>

  <select id="findOneByUsername" parameterType="String" resultMap="accountResultMap">
    SELECT
    username,
    password,
    user_uuid,
    first_name,
    last_name,
    enabled,
    admin
    FROM
    t_account
    WHERE
    username = #{username}
  </select>

  <update id="save" parameterType="Account">
    UPDATE
    t_account
    SET
    password = #{password}
    WHERE
    username =
    #{username}
  </update>
</mapper>
