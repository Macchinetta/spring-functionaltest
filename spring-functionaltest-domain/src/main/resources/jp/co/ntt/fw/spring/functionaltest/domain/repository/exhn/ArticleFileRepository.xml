<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.ntt.fw.spring.functionaltest.domain.repository.exhn.ArticleFileRepository">

  <select id="countAll" resultType="long">
    SELECT
    count(*)
    FROM
    t_article_file
  </select>

  <insert id="register">
    <trim prefix="INSERT INTO t_article_file (" suffix=")" suffixOverrides=",">
      <if test="fileId != null">
        file_id,
      </if>
      <if test="title != null">
        title,
      </if>
      <if test="content != null">
        content,
      </if>
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      <if test="fileId != null">
        #{fileId},
      </if>
      <if test="title != null">
        #{title},
      </if>
      <if test="content != null">
        #{content},
      </if>
    </trim>
  </insert>

  <delete id="deleteAll">
    DELETE FROM
    t_article_file
  </delete>

</mapper>
