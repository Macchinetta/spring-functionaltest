<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.ntt.fw.spring.functionaltest.domain.repository.dtac.UserListRepository">

    <resultMap id="userResultMap" type="User">
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="enabled" column="enabled" />
        <result property="authority" column="authority" />
    </resultMap>

    <sql id="selectPhrase">
        SELECT
            username
            ,password
            ,enabled
            ,authority
        FROM
            t_user
    </sql>

    <select id="count" resultType="long">
        SELECT
            count(*)
        FROM
            t_user
    </select>

    <select id="findPage" resultMap="userResultMap">
        <include refid="selectPhrase"/>
        ORDER BY username ASC
    </select>

    <select id="findOneByUsername" resultMap="userResultMap">
        <bind name="username" value="_parameter" />
        <include refid="selectPhrase"/>
        WHERE
            username = #{username}
    </select>
    
    <insert id="insert">
        <trim prefix="INSERT INTO t_user (" suffix=")"
            suffixOverrides=",">
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="enabled != null">
                enabled,
            </if>
            <if test="authority != null">
                authority,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="username != null">
                #{username},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="enabled != null">
                #{enabled},
            </if>
            <if test="authority != null">
                #{authority},
            </if>
        </trim>
    </insert>

</mapper>
