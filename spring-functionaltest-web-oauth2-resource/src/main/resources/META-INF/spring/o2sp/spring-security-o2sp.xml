<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:sec="http://www.springframework.org/schema/security"
  xsi:schemaLocation="
        http://www.springframework.org/schema/security https://www.springframework.org/schema/security/spring-security.xsd
        http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">

  <sec:http pattern="/messages/**" once-per-request="false">
    <sec:intercept-url pattern="/messages/intercept/**" method="GET" access="hasAuthority('SCOPE_READ')" />
    <sec:intercept-url pattern="/messages/intercept/**" method="POST" access="hasAuthority('SCOPE_CREATE')" />
    <sec:intercept-url pattern="/messages/intercept/**" method="PUT" access="hasAuthority('SCOPE_UPDATE')" />
    <sec:intercept-url pattern="/messages/intercept/**" method="DELETE" access="hasAuthority('SCOPE_DELETE')" />
    <sec:oauth2-resource-server>
      <sec:jwt jwk-set-uri="https://idp.example.com/.well-known/jwks.json" />
    </sec:oauth2-resource-server>
  </sec:http>

  <sec:global-method-security pre-post-annotations="enabled" />

</beans>